<openerp>
    <data>
        <record id="view_account_account_search_inherit" model="ir.ui.view">
            <field name="name">account.account.inherit.search</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_search"/>
            <field name="arch" type="xml">
				<xpath expr="//filter[@icon='terp-purchase']" position="after">
					<filter icon="terp-purchase" string="Account Type" domain="[('filter_type', 'in', ['equity','cash','bank','expense'])]"/>
				</xpath>
			</field>
		</record>

        <record id="view_account_account_tree_inherit" model="ir.ui.view">
            <field name="name">account.account.inherit.tree</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_list"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='user_type']" position="after">
					<field name="filter_type" invisible="1"/>
				</xpath>
			</field>
		</record>

    </data>
</openerp>