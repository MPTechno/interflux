                                    <span t-field="o.partner_bank_id.bank.street"/>
                                    <span t-field="o.partner_bank_id.bank.street2"/><br/>
                                    <span style="color:white;">..Bank Address:</span>
                                    <span t-field="o.partner_bank_id.bank.zip"/><span style="color:white;">...</span>
                                    <span t-field="o.partner_bank_id.bank.city"/><br/>
                                    <span style="color:white;">..Bank Address:</span>
                                    <span t-field="o.partner_bank_id.bank.state.name"/><span style="color:white;">...</span>
                                    <span t-field="o.partner_bank_id.bank.country.name"/>
                                    <!--Added-->
                                    <!--span t-foreach="o.partner_id.bank_ids" t-as="bank">
                                        <span t-field="bank.street"></span>
                                    </span-->
                                    </td>
                                    <th style="font-size: 9px;  width:12%;text-align:left;margin-top:20px">Delivery Order No.: <span t-esc="o.get_delivery_order_number(o)"/></th>
                                    <!--th style="font-size: 9px;  width:12%;text-align:left;margin-top:20px">Your P/O No.:</th-->
