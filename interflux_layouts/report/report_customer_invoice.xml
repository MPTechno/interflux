<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="sale_account_invoice_discount.report_invoice_visible">
            <t t-foreach="docs" t-as="o">
                <xpath expr="//div[@class='page']" position="replace">
                    <t t-call="interflux_layouts.external_picking_layout">
