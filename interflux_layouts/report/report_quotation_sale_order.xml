<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="sale_account_invoice_discount.report_saleorder_visible">
            <t t-foreach="docs" t-as="o">
                <xpath expr="//div[@class='page']" position="replace">
                    <t t-call="interflux_layouts.external_picking_layout">
                        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                        <div class="page">
                            <table style="width:100%;margin-top:20px;">
                                <tr>
                                    <td style="font-size: 12px;  width:65%;text-align:left;"><b>To: <span t-field="o.partner_id.name"/></b></td>
                                    <th style="font-size: 20px;  width:35%;text-align:left;">Quotation</th>
                                </tr>
                                <tr>
                                    <td style="font-size: 12px;  width:60%;text-align:left;margin-top:8px;"><span t-field="o.partner_id.name"/></td>
                                    <td style="font-size: 12px;  width:40%;text-align:left;margin-top:8px;">Quotation Ref: <span style="text-align:left;" t-field="o.client_order_ref"/></td>
                                </tr>
                                <tr>
                                    <td style="font-size: 12px;  width:60%;text-align:left;"><span t-field="o.partner_id.street"/></td>
                                    <td style="font-size: 12px;  width:40%;text-align:left;">Date : <span style="text-align:left" t-field="o.date_order"  t-field-options='{"format": "d MMMM y"}'/></td>
                                </tr>
                                <tr>
                                    <td style="font-size: 12px;  width:60%;text-align:left;"><span t-field="o.partner_id.country_id.name"/> <span t-field="o.partner_id.zip"/></td>
                                    <td style="font-size: 12px;  width:40%;text-align:left;">Quote By: <span style="text-align:left;" t-field="o.user_id.name"/></td>
                                </tr>
                                <tr>
                                    <td style="font-size: 12px;  width:60%;text-align:left;"></td>
                                    <td style="font-size: 12px;  width:40%;text-align:left;">Mobile no: <span style="text-align:left;" t-field="o.user_id.partner_id.mobile"/></td>
                                </tr>
                                <tr>
                                    <th style="font-size: 12px;  width:60%;text-align:left;"></th>
                                    <td style="font-size: 12px;  width:40%;text-align:left;">Email: <span style="text-align:left;" t-field="o.user_id.email"/></td>
                                </tr>
                                <tr>
                                    <th style="font-size: 12px;  width:65%;text-align:left;">Attention: <span style="text-align:left;" t-field="o.attention_id"/></th>
                                    <td style="font-size: 12px;  width:35%;text-align:left;"></td>
                                </tr>
                                <tr>
                                    <th style="font-size: 12px;  width:60%;text-align:left;">Tel No: <span style="text-align:left;" t-field="o.telno"/></th>
                                    <td style="font-size: 12px;  width:40%;text-align:left;"></td>
                                </tr>
                                <tr>
                                    <th style="font-size: 12px;  width:60%;text-align:left;">Fax no: <span style="text-align:left;" t-field="o.faxno"/></th>
                                    <td style="font-size: 12px;  width:40%;text-align:left;"></td>
                                </tr>
                            </table>
                            <table class="table table-bordered" style="width:100%;margin-top:20px; border: 1px solid black">
                                <thead style=" border: 1px solid black">
                                    <tr>
                                        <th style="font-size: 12px;  width:15%;text-align:center;border: 1px solid black">Part No.</th>
                                        <th style="font-size: 12px;  width:30%;text-align:center;border: 1px solid black">Quotation</th>
                                        <th style="font-size: 12px;  width:15%;text-align:center;border: 1px solid black">Shipment Terms</th>
                                        <th style="font-size: 12px;  width:10%;text-align:center;border: 1px solid black">Min Order Qty</th>
                                        <th style="font-size: 12px;  width:15%;text-align:center;border: 1px solid black">Unit Price</th>
                                        <th style="font-size: 12px;  width:15%;text-align:center;border: 1px solid black">Total </th>
                                    </tr>
                                </thead>
                                <tbody style=" border: 1px solid black" >
                                    <tr t-foreach="o.order_line" t-as="l">
                                        <td style="font-size: 12px;  width:15%;text-align:center;border: 1px solid black"></td>
                                        <td style="font-size: 12px;  width:30%;text-align:center;border: 1px solid black">Customer P/N:</td>
                                        <td style="font-size: 12px;  width:15%;text-align:center;border: 1px solid black"></td>
                                        <td style="font-size: 12px;  width:10%;text-align:center;border: 1px solid black"><span t-field="l.product_uom_qty"/> pc</td>
                                        <td style="font-size: 12px;  width:15%;text-align:center;border: 1px solid black"><span t-field="l.price_unit"/></td>
                                        <td style="font-size: 12px;  width:15%;text-align:center;border: 1px solid black">SGD <span t-field="l.price_subtotal"/> </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table style="width:100%;margin-top:20px;">
                                <tr>
                                    <td style="font-size: 12px;  width:20%;text-align:left;padding-top:8px"><strong>Payment Term:</strong></td>
                                    <td style="font-size: 12px;  width:40%;text-align:left;padding-top:8px"><span t-field="o.payment_term"/></td>
                                    <td style="font-size: 12px;  width:30%;text-align:right;padding-top:8px"><strong>Sub Total:</strong></td>
                                    <td style="font-size: 12px;  width:10%;text-align:right;padding-top:8px;"><span t-field="o.amount_untaxed"/></td>
                                </tr>
                                <tr>
                                    <td style="font-size: 12px;  width:20%;text-align:left;padding-top:8px"></td>
                                    <td style="font-size: 12px;  width:40%;text-align:left;padding-top:8px"></td>
                                    <td style="font-size: 12px;  width:30%;text-align:right;padding-top:8px"><strong>7% GST:</strong></td>
                                    <td style="font-size: 12px;  width:10%;text-align:right;padding-top:8px;"><span t-field="o.amount_tax"/></td>
                                </tr>
                                <tr>
                                    <td style="font-size: 12px;  width:20%;text-align:left;padding-top:8px"><strong>Validity Date:</strong></td>
                                    <td style="font-size: 12px;  width:40%;text-align:left;padding-top:8px"><span t-field="o.validity_date"/></td>
                                    <td style="font-size: 12px;  width:30%;text-align:right;padding-top:8px"><strong>Total Amount:</strong></td>
                                    <td style="font-size: 12px;  width:10%;text-align:right;padding-top:8px"><span t-field="o.amount_total"/></td>
                                </tr>
                            </table>
                            <table style="width:100%;margin-top:30px;">
                                <div class="row">
                                    <div class="col-xs-10"
                                         style="align: left; text-align:left; font-size:12px !important;font-weight:300px;">
                                        <span>
                                            <strong>
                                                Notice to buyer/buyer's bank: "All Bank charges inside/outside Singapore is on
                                                buyer's
                                                a/c:. Otherwise a SGD30/EUR30/USD30 bank reimbursement charge is payable to us for
                                                each
                                                TT transaction.
                                            </strong>
                                        </span>
                                    </div>
                                </div>
                            </table>
                        </div>
                    </t>
                </xpath>
            </t>
        </template>

