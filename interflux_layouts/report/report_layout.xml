        <template id="external_purchase_layout_custom_header">
            <div class="header">
                <div class="row">
                    <div class="col-xs-12">
                        <img t-if="o.company_id.invoice_header"
                             t-att-src="'data:image/png;base64,%s' % o.company_id.invoice_header"
                             style="max-height: 110px; "/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5" style="font-size:12px;">
                        <br/>
                        <br/>
                        <br/>
                        <span>
                            <strong>Vendor Code : <span t-field="o.partner_id.name"/></strong><br/>
                            <t t-if="o.partner_id.street">
	                            <span style="color:white;">Vendor Code ::</span><span t-field="o.partner_id.street"/><br/>
                            </t>
                            <t t-if="o.partner_id.street2">
	                            <span style="color:white;">Vendor Code ::</span><span t-field="o.partner_id.street2"/><br/>
                            </t>
                            <span style="color:white;">Vendor Code ::</span>
                            <t t-if="o.partner_id.city">
                            	<span t-field="o.partner_id.city"/><span style="color:white;">.</span>
                        	</t>
	                    	<t t-if="o.partner_id.state_id">
	                            <span t-field="o.partner_id.state_id.code"/><span style="color:white;">.</span>
                            </t>
                            <t t-if="o.partner_id.zip">
	                            <span t-field="o.partner_id.zip"/>
                            </t>
                            <t t-if="o.partner_id.country_id">
	                            <span style="color:white;">Vendor Code ::</span><span t-field="o.partner_id.country_id.name"/><br/>
                            </t>
                            <t t-if="o.partner_id.phone">
                            	<span style="color:white;">Vendor Code ::</span><span t-field="o.partner_id.phone"/><br/>
                        	</t>
                        	<t t-if="o.partner_id.fax">
	                            <span style="color:white;">Vendor Code ::</span><span t-field="o.partner_id.fax"/><br/>
                            </t>
                        </span>
                        <!--span>
                            <div t-field="o.partner_id"
                                 t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: true}"/>
                        </span-->
                        <br/>
                        <span>
                            <strong>Attention :</strong>
                        </span>
                        <span t-field="o.attn"/>
                        <br/>
                        <span>
                            <strong>Tel :</strong>
                        </span>
                        <span t-field="o.attn_tel"/>
                        <br/>
                        <span>
                            <strong>Fax :</strong>
                        </span>
                        <span t-field="o.fax"/>
                        <br/>
                    </div>
                    <div class="col-xs-7 pull-right" style="font-size:12px;">
                        <h3 style="margin-left:100px;" t-if="o.state != 'draft'">
                            <strong>Purchase Order</strong>
                        </h3>
                        <h3 style="margin-left:100px;" t-if="o.state == 'draft'">
                            <strong>Request for Quotation</strong>
                        </h3>
                        <div style="margin-left:100px;">
                            <div class="invoice_details" t-if="o.name">
                                <strong><span>P/O NO:</span></strong>
                                <span t-field="o.name"/>
                            </div>
                            <div class="invoice_details" t-if="o.date_order">
                                <strong><span>Date:</span></strong>
                                <span t-field="o.date_order" t-field-options='{"format": "d MMMM y"}'/>
                            </div>
                            <strong>SHIP TO:</strong>
                            <br/>
                            <span t-field="o.picking_type_id.warehouse_id.partner_id.name"/>
                            <br/>
                            <span t-field="o.picking_type_id.warehouse_id.partner_id.street"/>
                            <span t-field="o.picking_type_id.warehouse_id.partner_id.street2"/>
                            <span t-field="o.picking_type_id.warehouse_id.partner_id.city"/>
                            <br/>
                            <span t-field="o.picking_type_id.warehouse_id.partner_id.country_id.name"/>
                            <span t-field="o.picking_type_id.warehouse_id.partner_id.zip"/>
                            <br/>
                            &#x261E;
                            <strong>Please avoid lunch time 12pm-1pm</strong>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-xs-3" style="align: center; text-align: center;">
                        <strong>SHIP VIA</strong>
                    </div>
                    <div class="col-xs-3" style="align: center; text-align: center;">
                        <strong>TERMS</strong>
                    </div>
                    <div class="col-xs-3" style="align: center; text-align: center;">
                        <strong>Delivery Date</strong>
                    </div>
                    <div class="col-xs-3 list-inline" style="align: center; text-align: center;">
                        <strong>Page</strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3" style="align: center; text-align: center;">
                        <span t-field="o.incoterm_id"/>
                    </div>
                    <div class="col-xs-3" style="align: center; text-align: center;">
                        <span t-field="o.payment_term_id"/>
                    </div>
                    <div class="col-xs-3" style="align: center; text-align: center;">
                        <span t-field="o.minimum_planned_date"/>
                    </div>
                    <div class="col-xs-3 text-center">
                        <span>Page</span>
                        <span class="page"/>
                        of
                        <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>

