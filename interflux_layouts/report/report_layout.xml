<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>



        <!-- PURCHASE ORDER -->
        <template id="external_purchase_order_layout">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <t t-call="interflux_layouts.external_purchase_layout_custom_header"/>
            <t t-raw="0"/>
            <t t-call="interflux_layouts.external_purchase_order_layout_custom_footer"/>
        </template>


        <!-- PURCHASE ORDER - REQUEST FOR QUOTATION -->
        <template id="external_purchase_order_quotation_layout">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <t t-call="interflux_layouts.external_purchase_layout_custom_header"/>
            <t t-raw="0"/>
            <t t-call="interflux_layouts.external_purchase_order_layout_custom_footer"/>
        </template>


        <!-- DELIVERY ORDER -->
        <template id="external_picking_layout">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <t t-call="interflux_layouts.external_invoicelayout_custom_header"/>
            <t t-raw="0"/>
            <!--<t t-call="interflux_layouts.external_picking_custom_footer"/>-->
        </template>


        <!-- INVOICE -->
        <template id="external_invoice_layout">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <t t-call="interflux_layouts.external_invoicelayout_custom_header"/>
            <t t-raw="0"/>
            <!--<t t-call="interflux_layouts.external_picking_custom_footer"/>-->
        </template>

