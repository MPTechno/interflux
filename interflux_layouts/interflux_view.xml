<openerp>
    <data>
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='sales_purchases']" position="after">
                    <page name="product_pn" string="Product &amp; P/N">
                        <field name="pn_name" view_type="tree" context="{}">
                            <tree editable="bottom">
                                <field name="product_id" string="Product Name"/>
                                <field name="name" string="P/N Code"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">view.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group/field[@name='partner_shipping_id']" position="replace">
                    <field name="deli_address" string="Delivery Address"/>
                </xpath>
                <xpath expr="//field[@name='pricelist_id']" position="after">
                    <field name="shipment_term1" string="Shipment Terms"/>
                    <field name="your_po_no"/>
                </xpath>
            </field>
        </record>
        <record id="view_sale_quotation_tree" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="after">
                    <field name="client_order_ref" string="Reference/Description"/>
                </xpath>
            </field>
		</record>

        <record id="pn_code_for_customer_tree" model="ir.ui.view">
            <field name="name">interflux.pn.cod.tree</field>
            <field name="model">interflux.pn.cod</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id" string="Product Name"/>
                    <field name="name" string="P/N Code"/>
                </tree>
            </field>
        </record>

        <record id="pn_code_for_customer_form" model="ir.ui.view">
            <field name="name">interflux.pn.cod.form</field>
            <field name="model">interflux.pn.cod</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="product_id" string="Product Name"/>
                        <field name="name" string="P/N Code"/>
                        <field name="pn_topartner" invisible="1"/>
                    </group>
                </form>
            </field>
        </record>


        <!-- ADD PRODUCT_NUMBER FIELD -->

        <record id="product_template_only_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.product.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="before">
                    <field name="product_no" string="Product Number"/>
                </xpath>
            </field>
        </record>

        <record id="interflux_account_invoice_tree_inherit" model="ir.ui.view">
            <field name="name">interflux.account.invoice.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <field name="number" position="replace">
                    <field name="supplier_invoice_number" string="Number"/>
                </field>
                <!--<xpath expr="//page/tree[field@name='number']" position="after">-->
                    <!--<field name="number" />-->
                <!--</xpath>-->
            </field>
        </record>

    </data>
</openerp>
