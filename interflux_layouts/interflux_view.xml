<openerp>
    <data>
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='sales_purchases']" position="after">
                    <page name="product_pn" string="Product &amp; P/N">
                        <field name="pn_name" view_type="tree" context="{}">
                            <tree editable="bottom">
                                <field name="product_id" string="Product Name"/>
                                <field name="name" string="P/N Code"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">view.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group/field[@name='partner_shipping_id']" position="replace">
                    <field name="deli_address" string="Delivery Address"/>
                </xpath>
                <xpath expr="//field[@name='pricelist_id']" position="after">
                    <field name="shipment_term1" string="Shipment Terms"/>
                    <field name="your_po_no"/>
                </xpath>
            </field>
        </record>
        <record id="view_sale_quotation_tree" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="after">
                    <field name="client_order_ref" string="Reference/Description"/>
                </xpath>
            </field>
		</record>

        <record id="pn_code_for_customer_tree" model="ir.ui.view">
            <field name="name">interflux.pn.cod.tree</field>
            <field name="model">interflux.pn.cod</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id" string="Product Name"/>
                    <field name="name" string="P/N Code"/>
                </tree>
            </field>
        </record>

        <record id="pn_code_for_customer_form" model="ir.ui.view">
            <field name="name">interflux.pn.cod.form</field>
            <field name="model">interflux.pn.cod</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="product_id" string="Product Name"/>
                        <field name="name" string="P/N Code"/>
                        <field name="pn_topartner" invisible="1"/>
                    </group>
                </form>
            </field>
        </record>


        <!-- ADD PRODUCT_NUMBER FIELD -->

        <record id="product_template_only_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.product.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="before">
                    <field name="product_no" string="Product Number"/>
                </xpath>
            </field>
        </record>
        
        <!--MAde new Tree view for the Supplier Invoice-->
        <record id="supplier_invoice_tree_interflux" model="ir.ui.view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';black:state in ('proforma','proforma2','open');gray:state == 'cancel'" string="Invoice">
                    <field name="partner_id" groups="base.group_user"/>
                    <field name="commercial_partner_id" invisible="1"/>
                    <field name="date_invoice"/>
                    <field name="supplier_invoice_number" string="Number"/>
                    <field name="reference" invisible="1"/>
                    <field name="name" invisible="1"/>
                    <field name="journal_id" invisible="1"/>
                    <field name="period_id" invisible="1" groups="account.group_account_user"/>
                    <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                    <field name="user_id" string="Responsible"/>
                    <field name="date_due"/>
                    <field name="origin"/>
                    <field name="currency_id" groups="base.group_multi_currency"/>
                    <field name="residual" sum="Residual Amount"/>
                    <field name="amount_untaxed" sum="Untaxed Amount"/>
                    <field name="amount_total" sum="Total Amount"/>
                    <field name="state"/>
                    <field name="type" invisible="context.get('type',True)"/>
                </tree>
            </field>
        </record>
        
        <record id="account.action_invoice_tree2" model="ir.actions.act_window">
            <field name="name">Supplier Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('type','=','in_invoice')]</field>
            <field name="context">{'default_type': 'in_invoice', 'type': 'in_invoice', 'journal_type': 'purchase'}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="view_id" ref="supplier_invoice_tree_interflux"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to record a new supplier invoice.
              </p><p>
                You can control the invoice from your supplier according to
                what you purchased or received. Odoo can also generate
                draft invoices automatically from purchase orders or receipts.
              </p>
            </field>
        </record>

